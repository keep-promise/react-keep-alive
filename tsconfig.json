{
  "compilerOptions": {
    "target": "es5",
    "lib": ["esnext", "dom"],
    "importHelpers": true,
    "noEmitHelpers": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": true,
    "diagnostics": true,
    "baseUrl": "./",
  },
  "include": [
    "src/**/*",
    "globals.d.ts"
  ]
}